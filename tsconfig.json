{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "removeComments": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "tslib": ["node_modules/tslib/tslib.d.ts"]
    },
    "types": ["node"]
  },
  "include": [
    "src/**/*"
  ]
}
